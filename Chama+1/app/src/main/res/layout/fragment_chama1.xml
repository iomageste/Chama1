<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chama1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ufjf.chama1.Chama1Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chama +"
        android:id="@+id/labelChamaMais"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="80dp" />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerChamaMais"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tipo"
        android:id="@+id/labelTipo"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="80dp" />

    <Spinner
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTipo"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Area (km)"
        android:id="@+id/labelArea"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="80dp" />

    <SeekBar
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekArea"
        android:layout_marginTop="290dp"
        android:layout_gravity="center_horizontal"
        android:max="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2                     50                    100"
        android:id="@+id/labelAreaValores"
        android:layout_marginTop="310dp"
        android:layout_gravity="center_horizontal"
         />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginTop="370dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:inputType="text"
        android:singleLine="true"
        style="@android:style/Widget.AutoCompleteTextView"
        android:hint="Digite o endereÃ§o (opcional)" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/buttonBuscar"
        android:layout_marginTop="450dp"
        android:layout_gravity="center_horizontal" />



</FrameLayout>
